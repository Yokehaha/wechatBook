/* pages/userInfo/info.wxss */
.continer{background:rgba(153,153,153,0.2);}
.user{height:80px;background:rgba(255,255,255,1);padding:20px 0px 20px 40px;display:flex;align-items:center;}
.userText{margin-left:20px;}
.nameText{font-size:18px;color:black;}
.dataText{font-size:12px;color:rgba(166,166,166,1);}
.userBtn{margin-left:80px;}

.about{width:327px;height:44px;padding:8px 24px;background:white;border-top:1px solid rgba(153,153,153,0.2);}
.about>view{width:109px;height:44px;float:left;text-align:center;line-height:44px;}
.about>view>text{width:109px;height:22px;float:left;text-align:center;line-height:22px;font-size:12px;color:black;}

.history{height:220px;background:white;margin-top:10px;overflow:hidden;}
.historyText{height:40px;padding-left:21px;line-height:40px;font-size:14px;}
.historyImg{padding-right:13px;}
.scrollX .scrOut{display:flex;flex-wrap:nowrap;}
.scrollX .scrBox{width:60px;height:113px;margin:9px 0 0 13px;flex:0 0 80px;text-align:center;}
.van-multi-ellipsis--l2{font-size:8px;color:rgba(80,80,80,1);}
.historyShelf{height:40px;margin-top:17px;border-top:1px solid rgba(153,153,153,0.2);border-bottom:1px solid rgba(153,153,153,0.2);font-size:14px;text-align:center;line-height:40px;}
