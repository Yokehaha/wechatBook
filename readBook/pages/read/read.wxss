/* pages/read/read.wxss */
.container{padding:10px 10px;}
.title>text:first-of-type{font-size:32px;}
.title>text:last-of-type{font-size:24px;}

.set{height:110px;background:#ccc;overflow:hidden;clear:both;padding:10px 20px;}
.left{width:335px;height:50px;display:inline-block;position:relative;line-height:45px;}
.left>text{margin-left:10px}
.right{width:170px;height:25px;font-size:center;display:inline-block;clear:both;position:absolute;right:0;bottom:0;padding-top:25px;}
.bottom{}
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}
